<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleCliente.PagoTarjeta">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tiuloCompra"
            android:layout_margin="20sp"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"

            android:layout_marginBottom="10dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:text="@string/DetalleCompra"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:background="#F9694A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Evento: "
                android:textStyle="bold"
                android:background="@drawable/style_table"
                android:gravity="center">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/numUnitario"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/nombreEvento"
                android:background="@drawable/style_table"
                >
            </androidx.appcompat.widget.AppCompatTextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/cantidad"
                android:textSize="25dp"
                android:background="@drawable/style_table"
                android:paddingStart="5dp">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/numUnitario"
                android:textSize="25dp"
                android:gravity="center"
                android:background="@drawable/style_table"
                android:id="@+id/numCantidad"
                >
            </androidx.appcompat.widget.AppCompatTextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/totalcosto"
                android:textSize="25dp"
                android:background="@drawable/style_table"
                android:paddingStart="5dp">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/numCantidad"
                android:textSize="25dp"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/style_table"
                android:id="@+id/numTotal">
            </androidx.appcompat.widget.AppCompatTextView>

        </LinearLayout>
        <TextView
            android:id="@+id/totalTarjeta2"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

        </TextView>

        <EditText
            android:id="@+id/nombreTarjeta"
            android:hint="Nombre Completo"
            android:paddingTop="5dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginBottom="10dp"
            android:drawableRight="@drawable/person_ico"/>
        <EditText
            android:id="@+id/numTarjeta"
            android:hint="Número de tarjeta"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:drawableRight="@drawable/card_ico"/>
        <EditText
            android:id="@+id/fechaTarjeta"
            android:hint="Fecha Expiración MM/AA"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginBottom="10dp"
            android:drawableRight="@drawable/calendario_icon"/>
        <EditText
            android:id="@+id/cvcTarjeta"
            android:hint="CVC"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:drawableRight="@drawable/alert_ico"/>
        <EditText
            android:id="@+id/telefonoTarjeta"
            android:hint="Número de teléfono"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="20dp"
            android:drawableRight="@drawable/phone_ico"
            />
        <TextView
            android:id="@+id/totalTarjeta"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

        </TextView>
        <Button
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:id="@+id/Compra"
            android:text="@string/Compra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>



    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>